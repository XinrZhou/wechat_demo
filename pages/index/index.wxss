.indexContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
}

.avatarUrl {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: 100rpx 0;
}

button {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: 100rpx 0;
    text-align: center;
    font-size:24rpx ;
    line-height: 200rpx;
}

.userName {
    font-size: 32rpx;
    margin: 100rpx 0;
}

.goStudy {
    width: 300rpx;
    height: 80rpx;
